{
    "compilerOptions": {
        "sourceMap": true,
        "lib": [
            "es5",
            "es6",
            "es2015",
            "es2016",
            "es2017",
            "esnext.asynciterable"
        ],
        "target": "es5",
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "forceConsistentCasingInFileNames": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "baseUrl": "src",
        "paths": {
            "types/*": ["@types/*"],
            "packageJson": ["../package.json"]
        },
        "resolveJsonModule": true,
        "outDir": "./build"
    },
    "exclude": [
        "node_modules"
    ]
}
